<?xml version="1.0" encoding="UTF-8" ?>
	<extension type="{{type}}" method="upgrade">
	<name>pkg_{{filename}}</name>
	<packagename>{{filename}}</packagename>
	<author>{{authorName}}</author>
	<creationDate>{{creationDate}}</creationDate>
	<copyright>{{copyright}}</copyright>
	<license>{{licenseLong}}</license>
	<authorUrl>{{authorUrl}}</authorUrl>
	<version>{{version}}</version>
	<description>{{description}}</description>

	<updateservers><server type="extension" priority="1" name="{{nameUpper}}">https://raw.githubusercontent.com/GHSVS-de/upadateservers/master/pkg_{{name}}-update.xml</server></updateservers>

	<changelogurl>https://raw.githubusercontent.com/GHSVS-de/upadateservers/master/pkg_{{name}}-changelog.xml</changelogurl>

	<infourl>https://updates.ghsvs.de/changelog.php?file=pkg_{{name}}</infourl>

	<downloadUrl>
	https://github.com/GHSVS-de/pkg_{{name}}/raw/{{version}}/dist/{{zipFilename}}
	</downloadUrl>

	<minimumPhp>{{minimumPhp}}</minimumPhp>
	<maximumPhp>{{maximumPhp}}</maximumPhp>
	<minimumJoomla>{{minimumJoomla}}</minimumJoomla>
	<maximumJoomla>{{maximumJoomla}}</maximumJoomla>
	<allowDowngrades>{{allowDowngrades}}</allowDowngrades>
	<scriptfile>installerScript.php</scriptfile>
	{{namespace}}
	<files folder="packages">
		{{thisPackages}}
	</files>

	<files>
		<filename>installerScript.php</filename>
		<filename>LICENSE.txt</filename>
	</files>

	<blockChildUninstall>true</blockChildUninstall>
 </extension>
